{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"allowJs": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"module": "ES2022",
		"moduleResolution": "nodenext",
		"outDir": "dist",
		"preserveWatchOutput": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"strict": true,
		"strictPropertyInitialization": false,
		"target": "ES2022",
		"paths": {
			"~src/*": ["./src/*"],
			"~vendor/*": ["./vendor/*"]
		}
	},
	"include": ["*.ts", "types"]
}
