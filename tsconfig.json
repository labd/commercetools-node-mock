{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "ES2022",
    "moduleResolution": "nodenext",
    "outDir": "dist",
    "preserveWatchOutput": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "ES2022"
  },
  "include": ["*.ts", "types"]
}
