{
  "$schema": "https://json-schema.org/draft/2020-12/schema#",
  "additionalProperties": false,
  "title": "PriceDraft",
  "type": "object",
  "properties": {
    "discounted": {"$ref": "DiscountedPriceDraft.schema.json"},
    "country": {"type": "string"},
    "tiers": {
      "type": "array",
      "items": {"$ref": "PriceTierDraft.schema.json"}
    },
    "customerGroup": {"$ref": "CustomerGroupResourceIdentifier.schema.json"},
    "custom": {"$ref": "CustomFieldsDraft.schema.json"},
    "channel": {"$ref": "ChannelResourceIdentifier.schema.json"},
    "validUntil": {
      "type": "string",
      "format": "date-time"
    },
    "validFrom": {
      "type": "string",
      "format": "date-time"
    },
    "value": {"$ref": "Money.schema.json"}
  },
  "required": ["value"],
  "$id": "https://api.commercetools.com/PriceDraft.schema.json"
}
