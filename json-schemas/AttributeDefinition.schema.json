{
  "$schema": "https://json-schema.org/draft/2020-12/schema#",
  "description": "Describes a Product Attribute and allows you to define meta-information associated with the Attribute (like whether it should be searchable, or its constraints).",
  "additionalProperties": false,
  "title": "AttributeDefinition",
  "type": "object",
  "properties": {
    "isRequired": {"type": "boolean"},
    "name": {"type": "string"},
    "attributeConstraint": {"$ref": "AttributeConstraintEnumEnum.schema.json"},
    "inputHint": {"$ref": "TextInputHintEnum.schema.json"},
    "label": {"$ref": "LocalizedString.schema.json"},
    "isSearchable": {"type": "boolean"},
    "type": {"$ref": "AttributeType.schema.json"},
    "inputTip": {"$ref": "LocalizedString.schema.json"}
  },
  "required": [
    "type",
    "name",
    "label",
    "isRequired",
    "attributeConstraint",
    "inputHint",
    "isSearchable"
  ],
  "$id": "https://api.commercetools.com/AttributeDefinition.schema.json"
}
